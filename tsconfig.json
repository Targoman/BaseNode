{
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": false,
    "declaration": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".build",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "module": "CommonJS",
    "target": "ES2022",
    "rootDirs": [
      "./src",
      "./test",
      "../Common/src",
      "../submodules/BaseNode/src"
    ],
    "paths": {
      "#BaseNode/*": [
        "../submodules/BaseNode/src/*",
        "../../submodules/BaseNode/src/*",
        "../../../submodules/BaseNode/src/*",
        "../../../../submodules/BaseNode/src/*"
      ],
      "#Common/*": [
        "../Common/src/*",
        "../../Common/src/*",
        "../../../Common/src/*",
        "../../../../Common/src/*"
      ]
    },
    "types": [
      "node"
    ],
    "lib": [
      "es2022",
      "dom"
    ]
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/*.ts",
  ]
}